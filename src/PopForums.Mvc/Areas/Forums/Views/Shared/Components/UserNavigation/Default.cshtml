@model UserNavigationContainer

@if (Model.User == null)
{
	<li class="nav-item"><a asp-controller="@AccountController.Name" asp-action="Create" asp-route-area="Forums" class="nav-link">@PopForums.Resources.CreateAnAccount</a></li>
	<li class="nav-item"><a asp-controller="@AccountController.Name" asp-action="Login" asp-route-area="Forums" class="nav-link">@PopForums.Resources.Login</a></li>
	<li class="nav-item"><a asp-controller="@ForumController.Name" asp-action="Recent" asp-route-page="" asp-route-area="Forums" class="nav-link">@PopForums.Resources.Recent</a></li>
	<li class="nav-item"><a asp-controller="@FeedController.Name" asp-action="Index" asp-route-area="Forums" class="nav-link">@PopForums.Resources.ActivityFeed</a></li>
}
else
{
	<li class="nav-item dropdown">
		<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">@Model.User.Name</a>
		<div class="dropdown-menu" role="menu">
			<a asp-controller="@AccountController.Name" asp-action="ViewProfile" asp-route-id="@Model.User.UserID" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.Profile</a>
			<a asp-controller="@SubscriptionController.Name" asp-action="Topics" asp-route-page="" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.Subscriptions</a>
			<a asp-controller="@FavoritesController.Name" asp-action="Topics" asp-route-page="" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.Favorites</a>
			<div class="dropdown-divider"></div>
			<a asp-controller="@AccountController.Name" asp-action="EditProfile" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.EditProfile</a>
			<a asp-controller="@AccountController.Name" asp-action="Security" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.ChangeYourEmailPassword</a>
			<a asp-controller="@AccountController.Name" asp-action="ManagePhotos" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.ManageYourPhotos</a>
			<a asp-controller="@AccountController.Name" asp-action="ExternalLogins" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.ExternalLogins</a>
			@if (Model.User.IsInRole(PermanentRoles.Admin))
			{
				<div class="dropdown-divider"></div>
				<a asp-controller="@AdminController.Name" asp-action="Index" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.PopForumsAdmin</a>
			}
			<div class="dropdown-divider"></div>
			<a asp-controller="@AuthorizationController.Name" asp-action="Logout" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.Logout</a>
		</div>
	</li>
	<li class="nav-item dropdown">
		<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">@PopForums.Resources.Forum</a>
		<div class="dropdown-menu" role="menu">
			<a asp-controller="@ForumController.Name" asp-action="Recent" asp-route-page="" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.Recent</a>
			<a asp-controller="@FeedController.Name" asp-action="Index" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.ActivityFeed</a>
			<a asp-controller="@HomeController.Name" asp-action="Index" asp-route-area="Forums" class="nav-link py-1">@PopForums.Resources.ForumHome</a>
		</div>
	</li>
	<li class="nav-item">
		<a class="nav-link" asp-controller="@PrivateMessagesController.Name" asp-action="Index" asp-route-page="" asp-route-area="Forums" title="@PopForums.Resources.PrivateMessages"><span class="message-icon"></span> @Html.Raw(Model.PMCount)</a>
	</li>
}