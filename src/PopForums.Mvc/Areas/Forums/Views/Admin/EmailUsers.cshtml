@{
	ViewBag.PageTitle = PopForums.Resources.EmailUsers;
    Layout = "~/Areas/Forums/Views/Admin/AdminMaster.cshtml";
}

<h1>@PopForums.Resources.EmailUsers</h1>

@if (ViewBag.Result != null)
{<p class="alert alert-danger">@ViewBag.Result</p>}

<form method="post">
	<div role="form">
		<div class="form-group">
			<label>@PopForums.Resources.Subject</label>
			<input type="text" name="Subject" class="form-control"/>
		</div>
		<div class="form-group">
			<label>@PopForums.Resources.Body</label>
			<textarea name="Body" class="form-control" rows="10"></textarea>
		</div>
		<div class="form-group">
			<label>@PopForums.Resources.BodyHtml @PopForums.Resources.Optional</label>
			<textarea name="HtmlBody" class="form-control" rows="10"></textarea>
		</div>
		<input type="submit" value="Send" class="btn btn-primary" />
	</div>
</form>